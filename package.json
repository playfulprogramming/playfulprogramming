		"sitemap": "^8.0.0",
		"svgo": "^3.2.0",
		"symlink-dir": "^6.0.4",
		"terser": "^5.37.0",
		"tsx": "^4.19.2",
		"typescript": "^5.7.3",
		"typescript-eslint": "^8.20.0",
		"unified": "^11.0.5",
