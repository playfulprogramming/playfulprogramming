---
import Document from "../layouts/document.astro";
import SEO from "components/seo/seo.astro";
import PageCard from "components/page-card/page-card.astro";

import happyUnicorn from "../assets/unicorn_happy.svg";
import { LargeButton } from "../components";

const locale = "en";
---

<Document lang={locale}>
	<SEO title="Thank You!" slot="head" pathName={`/thanks`} />

	<main class="thanksMain">
		<PageCard
			imageSrc={happyUnicorn.src}
			imageAlt="A widely smiling Unicorn"
			title="Thank you for subscribing."
			description="Your subscription is now confirmed. You can expect to receive emails as we create new content."
		>
			<LargeButton href="/" slot="button" variant="primary">
				Go back home
			</LargeButton>
		</PageCard>
	</main>
</Document>

<style lang="scss">
	.thanksMain {
		display: flex;
		padding: var(--site-spacing);
		justify-content: center;
	}
</style>
