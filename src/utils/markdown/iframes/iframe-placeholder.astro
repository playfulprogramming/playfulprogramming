---
import {
	IFramePlaceholder as PreactIFramePlaceholder,
	IFramePlaceholderProps,
} from "components/iframe-placeholder/iframe-placeholder";
import { VideoPlaceholder } from "components/video/video-placeholder";

export type Props = IFramePlaceholderProps & {
	isVideo?: boolean;
};

const props = Astro.props;
---

{
	props.isVideo ? (
		<VideoPlaceholder {...props} client:load />
	) : (
		<PreactIFramePlaceholder {...props} client:load />
	)
}
