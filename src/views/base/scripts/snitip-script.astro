---
import { SnitipInfo } from "types/SnitipInfo";
import { SnitipPopover } from "components/snitip/snitip";
import "./snitip-trigger.scss";
import "components/inline-popup/inline-popup.scss";

interface Props {
	snitips: Map<string, SnitipInfo>;
}

const snitips = Astro.props.snitips;
---

{
	[...snitips.entries()].map(([id, snitip]) => (
		<SnitipPopover id={`snitip-popover-${id}`} snitip={snitip} />
	))
}

<script>
	import "./snitip-script-impl";
</script>
